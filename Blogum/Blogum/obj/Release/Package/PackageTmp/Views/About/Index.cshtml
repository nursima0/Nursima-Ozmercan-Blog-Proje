@model IEnumerable<EntityLayer.Concrete.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('/miniblog/images/AP1.jpg'); ">
    <div class="container">
        <div class="row same-height justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="post-entry text-center">
                    <h1 class="">Hakkımızda</h1>
                    <p class="lead mb-4 text-white">Siz değeri okuyucularımız bizler için çok değerlisiniz. Yazarlarımızı ve ekibimi tanımak için bu sayfada kalabilirsiniz...</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 order-md-2">
                    <img src="@item.AboutImage1" alt="Image" class="img-fluid">
                </div>
                <div class="col-md-5 mr-auto order-md-1">
                    <h2>Biz Kim Miyiz?</h2>

                    <p>@item.AboutContent1</p>
                    <ul class="ul-check list-unstyled success">
                        Temel Amaçlarım:
                        <li>Siz okuyucularıma her zaman içerik üretmek</li>
                        <li>Umutsuzluğa kapıldığımda bu bloga bakarak ben başardım diyebilmek</li>
                        <li>Hayatın beni süreklemesine değil de kendi yolumu çizmeyi</li>
                        Amaç olarak edindim.
                    </ul>
                </div>
            }
        </div>
    </div>
</div>
@Html.Action("MeetTheTeam", "About")

<div class="site-section bg-light">
    <div class="container">

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6">
                    <img src="@item.AboutImage2" alt="Image" class="img-fluid" width="400">
                </div>
                <div class="col-md-5 ml-auto">
                    <h2>Neler Yapıyoruz</h2>

                    <p class="mb-4">@item.AboutContent2</p>
                    <ul class="ul-check list-unstyled success">
                        <li>Okuduğumuz ve izlediğimiz eserleri sizler için inceliyoruz</li>
                        <li>Kendi yazım tarzımız ile oluşturduğumuz metinleri sizler ile paylaşıyoruz</li>

                    </ul>
                </div>
            }
        </div>

    </div>
</div>

