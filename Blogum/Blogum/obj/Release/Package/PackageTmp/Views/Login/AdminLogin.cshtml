<!-- Body -->
<body>

    <h1>ADMİN GİRİŞ SAYFASI</h1>

    <div class="container w3layouts agileits">

        <div class="login w3layouts agileits">
            @using (Html.BeginForm("AdminLogin", "Login"))
            {
                <h2>Giriş Yap</h2>
               
                    <input type="text" Name="UserName" placeholder="Kullanıcı Adı" required="">
                    <input type="password" Name="Password" placeholder="Şifre" required="">
                
                <ul class="tick w3layouts agileits">
                    <li>
                        <input type="checkbox" id="brand1" value="">
                        <label for="brand1"><span></span>Beni Hatırla</label>
                    </li>
                </ul>
                <div class="send-button w3layouts agileits">
                    <form>
                        <input type="submit" value="Giriş Yap">
                    </form>
                </div>
                <a href="#">Şifremi Unuttum</a>
                <div class="social-icons w3layouts agileits">
                    <p>- Diğer Hesapların İle Giriş Yap -</p>
                    <ul>
                        <li class="twt w3ls"><a href="#"><span class="icons w3layouts"></span><span class="text w3layouts agileits">Twitter</span></a></li>
                        <li class="ggp aits"><a href="#"><span class="icons agileits"></span><span class="text w3layouts agileits">Google+</span></a></li>

                    </ul>
                </div>
                <div class="clear"></div>
            }
        </div>
        <div class="clear"></div>

    </div>

    <div class="footer w3layouts agileits">
        <p> &copy; 2022 Tüm Hakları Saklıdır | Tasarlayan <a href="http://w3layouts.com" target="_blank">W3layouts</a></p>
    </div>

</body>
