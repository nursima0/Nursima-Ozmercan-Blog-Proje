            <input type="radio" name="rating" value="3" id="3">
            <label for="3">@Html.Hidden("BlogRating", 3)☆</label>
            <input type="radio" name="rating" value="2" id="2">
            <label for="2">@Html.Hidden("BlogRating", 2)☆</label>
