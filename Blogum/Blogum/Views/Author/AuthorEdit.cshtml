@model EntityLayer.Concrete.Author

@{
    ViewBag.Title = "AuthorEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form class="form-group" method="post">
    @Html.Label("Yazar ID")
    @Html.TextBoxFor(x => x.AuthorID, new { @class = "form-control" })
    <br />
    @Html.Label("Yazarın Adı")
    @Html.TextBoxFor(x => x.AuthorName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x=>x.AuthorName)
    <br />
    @Html.Label("Resim Yolu")
    @Html.TextBoxFor(x => x.AuthorImage, new { @class = "form-control" })
    <br />
    @Html.Label("İlgilendiği Alanlar")
    @Html.TextBoxFor(x => x.AboutShort, new { @class = "form-control" })
    @Html.ValidationMessageFor(x=>x.AuthorTitle)
    <br />
    @Html.Label("Yazarın Mesleği")
    @Html.TextBoxFor(x => x.AuthorTitle, new { @class = "form-control" })
    @Html.ValidationMessageFor(x=>x.AuthorTitle)
    <br />
    @Html.Label("Yazar Hakkında")
    @Html.TextAreaFor(x => x.AuthorAbout, 3, 20, new { @class = "form-control" })
    @Html.ValidationMessageFor(x=>x.AuthorAbout)
    <br />
    @Html.Label("Yazarın Mail Adresi")
    @Html.TextBoxFor(x => x.AuthorMail, new { @class = "form-control" })
    <br />
    @Html.Label("Belirlediği Şifre")
    @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
    <br />
    @Html.Label("Telefon Numarası")
    @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Değişiklikleri Kaydet</button>
</form>

