@model IEnumerable<EntityLayer.Concrete.Blog>

@{
    ViewBag.Title = "AdminCategoryList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{string color = " ";}
@{string casename = "";}
@{ int puan = 1; }
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Yazar Blogları Listesi</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                ID
                            </th>
                            <th style="width: 20%">
                                Blog Başlığı
                            </th>
                            <th style="width:20%">
                                Blog Değerlendirme Oranı
                            </th>
                            <th style="width: 8%" class="text-center">
                                Durumu
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            puan = item.BlogRating * 10;

                            if (puan >= 85)
                            {
                                color = "post-category text-white bg-success mb-3";
                                casename = "Çok İyi";
                            }

                            if (puan >= 70 && puan <= 84)
                            {
                                color = "post-category text-white bg-secondary mb-3";
                                casename = "Başarılı";
                            }

                            if (puan >= 50 && puan <= 69)
                            {
                                color = "post-category text-white bg-info mb-3";
                                casename = "Fena Değil";
                            }

                            if (puan >= 0 && puan <= 49)
                            {
                                color = "post-category text-white bg-danger mb-3";
                                casename = "Beğenmedim";
                            }

                            <tr>
                                <td> @item.BlogID </td>
                                <td>
                                    @item.BlogTitle
                                </td>
                              
                                <td class="project_progress">
                                    <div class="progress progress-sm">
                                        <div class="progress-bar bg-green" role="progressbar" aria-volumenow="@item.BlogRating" aria-volumemin="0" aria-volumemax="100" style="width:@puan%">
                                        </div>
                                    </div>
                                    <small>
                                        Yazınız % @puan Oranında Beğenildi
                                    </small>
                                </td>
                                <td class="project-state">
                                    <span class="badge @color">@casename</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-info btn-sm" href="/User/UpdateBlog/@item.BlogID">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="#">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <br />
    <a href="/User/AddBlog/" class="btn btn-success">Yeni Blog Ekle</a>
    <!-- /.content -->
    <!-- /.control-sidebar -->
</body>
</html>